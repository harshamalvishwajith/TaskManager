@model TaskManager.Models.Task

@{
    ViewData["Title"] = "Task Details";
}

<div class="container">
    <h1>Task Details</h1>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">@Model.Title</h5>
            <span class="badge @(Model.IsCompleted ? "bg-success" : "bg-warning")">
                @(Model.IsCompleted ? "Completed" : "Pending")
            </span>
        </div>
        <div class="card-body">
            <p class="card-text">@Model.Description</p>

            <div class="row mt-4">
                <div class="col-md-6">
                    <p><strong>Created:</strong> @Model.CreatedAt.ToString("g")</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Last Updated:</strong> @(Model.UpdatedAt.HasValue ? Model.UpdatedAt.Value.ToString("g") : "N/A")</p>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
